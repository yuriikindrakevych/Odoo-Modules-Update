<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="res_config_settings_sales_team_autofill" model="ir.ui.view">
            <field name="name">res.config.settings.inherit.sales.team.autofill</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='contacts_settings']" position="inside">
                    <div class="row mt16 o_settings_container" name="contacts_setting_container">
                        <div class="col-xs-12 col-md-6 o_setting_box" title="title here" id="team_autofill">
                            <div class="o_setting_right_pane" id="team_autofill_settings">
                                <h6>Автозаповнення команд продажу</h6>
                                <div class="text-muted">
                                    Команди продажу які автозаповняються при створенні лідів та продажів на контакт їх члена
                                </div>
                                <field name="contact_autofill_team_ids" style="margin-top: 10px;">
                                    <list width="200px">
                                        <field name="name"/>
                                    </list>
                                </field>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>