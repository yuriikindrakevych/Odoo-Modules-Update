<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_lead_lost_action_mobius" model="ir.actions.act_window">
        <field name="name">Lost Reason</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.lead.lost</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="crm.crm_lead_lost_view_form"/>
        <field name="target">new</field>
    </record>
    <record id="crm_lead_view_form_inherit" model="ir.ui.view">
        <field name="name">crm.lead.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_set_lost']" position="replace">
                <button name="action_set_lost" string="Lost" type="object" data-hotkey="l" title="Mark as lost"
                    invisible="type == 'opportunity' or (probability == 0 and not active) or type == 'lead'"/>
            </xpath>
            <xpath expr="//button[@name='action_set_lost']" position="after">
                <button name="%(crm_lead_lost_action_mobius)d" string="Lost"
                    type="action" context="{'default_lead_id': active_id}"
                    invisible="type == 'opportunity' or (probability == 0 and not active)"/>
            </xpath>
            <xpath expr="//group[@name='opportunity_info']" position="after">
                <group name="lead_info" invisible="type == 'opportunity'">
                    <field name="lost_reason" invisible="active"/>
                    <field name="date_conversion" invisible="1"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
