<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_lead_lost_action_mobius" model="ir.actions.act_window">
        <field name="name">Lost Reason</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.lead.lost</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="crm.crm_lead_lost_view_form"/>
        <field name="target">new</field>
    </record>
    <record id="crm_lead_view_form_inherit" model="ir.ui.view">
        <field name="name">crm.lead.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <!-- In Odoo 18, Lost button uses action reference, add custom button in header -->
            <xpath expr="//header" position="inside">
                <button name="%(crm_lead_lost_action_mobius)d" string="Lost (Custom)"
                    type="action" context="{'default_lead_id': active_id}"
                    invisible="type == 'lead' or (probability == 0 and not active)"/>
            </xpath>
            <xpath expr="//group[@name='lead_priority']" position="after">
                <group name="mobius_lead_info" invisible="type == 'opportunity'">
                    <field name="lost_reason" invisible="active"/>
                    <field name="date_conversion" invisible="1"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
