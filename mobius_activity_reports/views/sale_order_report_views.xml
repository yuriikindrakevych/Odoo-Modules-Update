<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_activity_report_view_pivot" model="ir.ui.view">
        <field name="name">sale.order.activity.report.pivot</field>
        <field name="model">sale.order.activity.report</field>
        <field name="arch" type="xml">
            <pivot string="Activities Analysis" sample="1">
                <field name="mail_activity_type_id" type="col"/>
                <field name="date" interval="month" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="sale_order_activity_report_view_graph" model="ir.ui.view">
        <field name="name">sale.order.activity.report.graph</field>
        <field name="model">sale.order.activity.report</field>
        <field name="arch" type="xml">
            <graph string="Activities Analysis" sample="1">
                <field name="mail_activity_type_id"/>
                <field name="date" interval="month"/>
            </graph>
        </field>
    </record>

    <record id="sale_order_activity_report_view_tree" model="ir.ui.view">
        <field name="name">sale.order.activity.report.tree</field>
        <field name="model">sale.order.activity.report</field>
        <field name="arch" type="xml">
            <list default_order="date desc">
                <field name="date"/>
                <field name="author_id"/>
                <field name="mail_activity_type_id"/>
                <field name="body"/>
            </list>
        </field>
    </record>

    <record id="sale_order_activity_report_action" model="ir.actions.act_window">
        <field name="name">Activities</field>
        <field name="res_model">sale.order.activity.report</field>
        <field name="view_mode">pivot,graph,list</field>
    </record>

    <menuitem id="menu_report_product_all"
        name="Report Activity"
        action="sale_order_activity_report_action"
        parent="sale.menu_sale_report"
        sequence="1"/>


</odoo>
