<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_activity_report_view_pivot" model="ir.ui.view">
        <field name="name">res.partner.activity.report.pivot</field>
        <field name="model">res.partner.activity.report</field>
        <field name="arch" type="xml">
            <pivot string="Activities Analysis" sample="1">
                <field name="mail_activity_type_id" type="col"/>
                <field name="date" interval="month" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="res_partner_activity_report_view_graph" model="ir.ui.view">
        <field name="name">res.partner.activity.report.graph</field>
        <field name="model">res.partner.activity.report</field>
        <field name="arch" type="xml">
            <graph string="Activities Analysis" sample="1">
                <field name="mail_activity_type_id"/>
                <field name="date" interval="month"/>
            </graph>
        </field>
    </record>

    <record id="res_partner_activity_report_view_tree" model="ir.ui.view">
        <field name="name">res.partner.activity.report.tree</field>
        <field name="model">res.partner.activity.report</field>
        <field name="arch" type="xml">
            <list default_order="date desc">
                <field name="date"/>
                <field name="author_id"/>
                <field name="mail_activity_type_id"/>
                <field name="body"/>
            </list>
        </field>
    </record>

    <record id="res_partner_activity_report_action" model="ir.actions.act_window">
        <field name="name">Activities</field>
        <field name="res_model">res.partner.activity.report</field>
        <field name="view_mode">pivot,graph,list</field>
    </record>


    <menuitem id="res_partner_menu_reports"
        name="Reports"
        parent="contacts.menu_contacts"
        groups="base.group_system"
        sequence="2"/>

    <menuitem id="menu_partner_report_activity"
        action="res_partner_activity_report_action"
        name="Report Activity"
        sequence="1" parent="res_partner_menu_reports"/>

</odoo>
