<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="mobius_lead_condition_crm_lead_view_form_inherit">
        <field name="name">crm.lead.form.inherit (mobius_lead_condition)</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='opportunity_info']" position="after">
                <group>
                    <field name="lead_condition_id"/>
                </group>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="mobius_lead_condition_view_crm_case_leads_filter_inherit">
        <field name="name">crm.lead.search.lead.inherit (mobius_lead_condition)</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_leads_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='city']" position="before">
                <filter name="group_lead_condition" string="Lead Condition" context="{'group_by': 'lead_condition_id'}"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="mobius_lead_condition_view_crm_case_opportunities_filter_inherit">
        <field name="name">crm.lead.search.opportunity.inherit (mobius_lead_condition)</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='city']" position="before">
                <filter name="group_lead_condition" string="Lead Condition" context="{'group_by': 'lead_condition_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="mobius_lead_condition_crm_lead_action_group_by_condition" model="ir.actions.act_window">
        <field name="name">Leads</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">kanban,tree,graph,form,calendar,pivot</field>
        <field name="view_id" ref="crm.crm_case_kanban_view_leads"/>
        <field name="domain">[('type','=','lead')]</field>
        <field name="search_view_id" ref="crm.view_crm_case_opportunities_filter"/>
        <field name="context">{
                'search_default_team_id': [active_id],
                'search_default_group_lead_condition': 1,
                'default_team_id': active_id,
                'default_type': 'lead',
            }
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new lead
            </p><p>
                Odoo helps you keep track of your sales pipeline to follow
                up potential sales and better forecast your future revenues.
            </p><p>
                You will be able to plan meetings and phone calls from
                opportunities, convert them into quotations, attach related
                documents, track all discussions, and much more.
            </p>
        </field>
    </record>

</odoo>
