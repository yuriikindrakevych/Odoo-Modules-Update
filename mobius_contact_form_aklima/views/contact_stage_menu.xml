<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="contact_stage_action" model="ir.actions.act_window">
        <field name="name">Contact Stages</field>
        <field name="res_model">contact.stage</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_contact_stage_tree" model="ir.ui.view">
        <field name="name">contact.stage.tree</field>
        <field name="model">contact.stage</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <menuitem id="menu_contact_stages"
        action="contact_stage_action"
        name="Contact Stages"
        sequence="2" parent="contacts.res_partner_menu_config"/>
</odoo>
