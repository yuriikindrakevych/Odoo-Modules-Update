<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_zamowienie" model="report.paperformat">
        <field name="name">zamowienie format</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="margin_top">20</field>
        <field name="margin_bottom">40</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_spacing">20</field>
    </record>

    <record id="paperformat_faktura" model="report.paperformat">
        <field name="name">Faktura format</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="margin_top">20</field>
        <field name="margin_bottom">55</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_spacing">20</field>
    </record>

    <record id="action_report_sale_order_zamowienie" model="ir.actions.report">
        <field name="name">Zamowienie / Oferta (pl)</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">mobius_sale_order_reports.sale_order_zamowienie</field>
        <field name="report_file">mobius_sale_order_reports.sale_order_zamowienie</field>
        <field name="paperformat_id" ref="paperformat_zamowienie"/>
        <field name="print_report_name">'Zamowienie / Oferta - %s' % (object.name or '')</field>
        <field name="binding_model_id" ref="model_sale_order"/>
        <field name="binding_type">report</field>
    </record>

