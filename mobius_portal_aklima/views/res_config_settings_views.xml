<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='quotation_order_setting_container']" position="inside">
                <setting id="validity_period_for_order_created_with_website_days" help="The relevance of the order created with a website.">
                    <field name="use_validity_period_for_order_created_with_website"/>
                    <div class="content-group" invisible="not use_validity_period_for_order_created_with_website">
                        <div class="mt16">
                            <span class="col-lg-3">Days: <field name="validity_period_for_order_created_with_website_days" required="use_validity_period_for_order_created_with_website"/> days</span>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>


    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stock</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="35"/>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='product_setting_container']" position="inside">
                <setting id="product_show_availability_web" help="Show on web product available">
                    <field name="use_product_show_availability"/>
                    <div class="content-group">
                        <div class="mt16">
                            <span>Only if below <field name="available_threshold" class="oe_inline"/> Units</span>
                        </div>
                        <div class="mt16">
                            <span>Message <field name="out_of_stock_message" class="oe_inline"/></span>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>

</odoo>
