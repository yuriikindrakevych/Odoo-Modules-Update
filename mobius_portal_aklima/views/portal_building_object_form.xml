                                        t-options="{'format': 'dd/MMM/YYYY', 'widget': 'date'}" />
                                </div>
                                <div class="input-group datetime"
                                     id="datetimepickerIDtwo"
                                     data-target-input="nearest">
                                    <input type="text"
                                            id="datetimepickerIDtwoinput"
                                           class="form-control datetimepicker-input"
                                           data-target="#datetimepickerIDtwo"
                                           name="my_datetimepickertwo"/>
                                    <div class="input-group-append"
                                         data-target="#datetimepickerIDtwo"
                                         data-toggle="datetimepicker">
                                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                    </div>
                                </div>
                            </div>

                            <script type="text/javascript">
                                    $(function () {
                                        $('#datetimepickerID').datetimepicker();
                                        $('#datetimepickerIDtwo').datetimepicker();
                                    });
                            </script>
                            <!-- <script type="text/javascript" src="countries.js"></script> -->
                            </div>
                            <div class="clearfix oe_login_buttons" style="margin-bottom: 25px">
                                <button type="submit" class="btn btn-primary pull-left">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo> 