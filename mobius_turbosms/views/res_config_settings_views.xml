<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.turbosms</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='mail_pluggin_setting']" position="before">
                            <div class="col-12 col-lg-6 o_setting_box" id="mobius_turbosms">
                                <div class="o_setting_left_pane">
                                    <field name="turbosms_enable"/>
                                </div>
                                <div class="o_setting_right_pane" id="mobius_turbosms_settings">
                                    <label for="turbosms_enable"/>
                                    <div class="text-muted">
                                        Enable integration with TruboSMS and send messages
                                    </div>
                                    <div class="content-group" invisible="not turbosms_enable" id="mobius_turbosms_footer">
                                        <div class="mt16 text-warning"><strong>Save</strong> this page and come back here to set up the feature.</div>
                                    </div>
                                </div>
                            </div>

            <div id="mobius_turbosms_footer" position="replace">
                <div invisible="not turbosms_enable">
                    <div class="content-group mt16">
                        <label for="token_for_turbosms" class="o_light_label"/>
                        <field name="token_for_turbosms"/>
                    </div>
                </div>
            </div>
            </xpath>
        </field>
    </record>


</odoo>
