<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mobius_catalogue_koatuu_settlement_type_action" model="ir.actions.act_window">
        <field name="name">Types</field>
        <field name="res_model">mobius_catalogue_koatuu.settlement_type</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a type</p>
        </field>
    </record>

    <record id="mobius_catalogue_koatuu_settlement_type_view_tree" model="ir.ui.view">
        <field name="name">List of the settlement types</field>
        <field name="model">mobius_catalogue_koatuu.settlement_type</field>
        <field name="arch" type="xml">
            <list string="Categories" create="false">
                <field name="name"/>
                <field name="category"/>
            </list>
        </field>
    </record>

</odoo>
