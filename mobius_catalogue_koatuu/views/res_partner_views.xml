<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mobius_catalogue_koatuu_res_partner_inherit_changed_city" model="ir.ui.view">
        <field name="name">res.partner.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Приховуємо поле city -->
            <xpath expr="//field[@name='city']" position="replace">
                <field name="city" modifiers="{'invisible': True}"/>
            </xpath>

            <!-- Додаємо поле city_ua з новими модифікаторами -->
            <xpath expr="//field[@name='state_id']" position="after">
                <field name="city_ua"
                    placeholder="City"
                    class="o_address_city"
                    options="{'no_open': True}"
                    context="{'default_country_id': country_id, 'default_res_country_state_id': state_id}"
                    modifiers="{'readonly': [('type', '=', 'contact'), ('parent_id', '!=', False)]}"
                />
            </xpath>
        </field>
    </record>

</odoo>
