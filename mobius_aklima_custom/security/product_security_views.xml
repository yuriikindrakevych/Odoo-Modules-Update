<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_product_template_form_inherit_standard_price_groups" model="ir.ui.view">
            <field name="name">product.template.common.form.security.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='standard_price']" position="attributes">
                    <attribute name="groups">sales_team.group_sale_salesman_all_leads,sales_team.group_sale_manager
                    </attribute>
                </xpath>
                <xpath expr="//div[@name='standard_price_uom']" position="attributes">
                    <attribute name="groups">sales_team.group_sale_salesman_all_leads,sales_team.group_sale_manager
                    </attribute>
                </xpath>
            </field>
        </record>

        <record id="stock.menu_valuation" model="ir.ui.menu">
            <field name="groups_id" eval="[(4,ref('sales_team.group_sale_salesman_all_leads')),(4,ref('sales_team.group_sale_manager'))]"/>
        </record>

        <record id="stock_account.menu_valuation" model="ir.ui.menu">
            <field name="groups_id" eval="[(4,ref('sales_team.group_sale_salesman_all_leads')),(4,ref('sales_team.group_sale_manager'))]"/>
        </record>
    </data>
</odoo>
