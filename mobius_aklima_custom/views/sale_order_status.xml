<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_sale_order_status_tree" model="ir.ui.view">
        <field name="name">sale.order.status.tree</field>
        <field name="model">sale.order.status</field>
        <field name="arch" type="xml">
            <tree string="Order Statuses" editable="top">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>

    <record id="view_sale_order_status_search" model="ir.ui.view">
        <field name="name">sale.order.status.search</field>
        <field name="model">sale.order.status</field>
        <field name="arch" type="xml">
            <search string="Search Order Statuses">
                <field name="name"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_sale_order_status" model="ir.actions.act_window">
        <field name="name">Order Statuses</field>
        <field name="res_model">sale.order.status</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new order status
            </p>
            <p>
                Order statuses allow you to categorize your sales orders with colored tags.
            </p>
        </field>
    </record>

    <menuitem id="menu_sale_order_status"
              name="Order Statuses"
              parent="sale.menu_sales_config"
              action="action_sale_order_status"
              sequence="3"/>
</odoo>