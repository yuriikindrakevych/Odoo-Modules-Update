<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_bank_inherit_tree" model="ir.ui.view">
        <field name="name">res.bank.tree.inherit</field>
        <field name="model">res.bank</field>
        <field name="inherit_id" ref="base.view_res_bank_tree"/>
        <field name="arch" type="xml">
            <field name="bic" position="after">
                <field name="full_name"/>
                <field name="iban_code"/>
                <field name="account_number"/>
                <field name="edrpou_number"/>
                <field name="swift_code"/>
                <field name="itn_number"/>
            </field>
        </field>
    </record>

    <record id="view_res_bank_form_inherit" model="ir.ui.view">
        <field name="name">res.bank.form.inherit</field>
        <field name="model">res.bank</field>
        <field name="inherit_id" ref="base.view_res_bank_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="full_name"/>
                <field name="iban_code"/>
                <field name="account_number"/>
                <field name="edrpou_number"/>
                <field name="swift_code"/>
                <field name="itn_number"/>
            </field>
        </field>
    </record>
</odoo>
