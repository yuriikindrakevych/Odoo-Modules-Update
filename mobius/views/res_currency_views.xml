<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_currency_form_inherit" model="ir.ui.view">
        <field name="name">res.currency.form.inherit</field>
        <field name="model">res.currency</field>
        <field name="inherit_id" ref="base.view_currency_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='inverse_company_rate']" position="after">
                <xpath expr="//field[@name='company_rate']" position="move"/>
            </xpath>
        </field>
    </record>
</odoo>