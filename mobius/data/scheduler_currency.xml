<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="currency_action_ir_cron" model="ir.cron">
            <field name="name">Exchange rate</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).strftime('%Y-%m-%d 03:00:00')" />   <!--Dynamic-->
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_res_currency_rate"/>
            <field name="state">code</field>
            <field name="code">model.sync_action()</field>
        </record>
    </data>
</odoo>