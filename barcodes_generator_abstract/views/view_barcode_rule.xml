<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_barcode_rule_form" model="ir.ui.view">
        <field name="model">barcode.rule</field>
        <field name="inherit_id" ref="barcodes.view_barcode_rule_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <group string="Barcode Generation" modifiers="{'invisible': ['|', ('encoding', '=', 'any'), ('padding', '=', 0)]}">
                    <field name="generate_type" />
                    <field name="padding" modifiers="{'invisible': [('generate_type', '=', 'no')]}"/>
                    <field name="generate_model" modifiers="{'invisible': [('generate_type', '=', 'no')]}"/>
                    <field name="generate_automate" modifiers="{'invisible': [('generate_type', '=', 'no')]}"/>
                    <button
                        name="generate_sequence"
                        type="object"
                        string="Generate Sequence"
                        colspan="2"
                        modifiers="{'invisible': ['|', ('generate_type', '!=', 'sequence'), ('sequence_id', '!=', False)]}"
                    />
                    <field name="sequence_id" modifiers="{'invisible': [('generate_type', '!=', 'sequence')]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
